<% layout("/layouts/boilerplate") %>
<body>
    <div class="row">
        <div class="col-12">
        <br>    
        <h3>Create a New Listing</h3>
            <br>
            <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label"><b>Title</b></label>
                    <input type="text" class="form-control" name="listing[title]" placeholder="Add a catchy title" required>
                    <div class="valid-feedback">Title looks good!</div>
                </div>
        
                <div class="mb-3">
                    <label for="description" class="form-label"><b>Description</b></label>
                    <textarea type="text" class="form-control" name="listing[description]" placeholder="Describe about the place" required></textarea> 
                    <div class="valid-feedback">Description looks good!</div>
                </div>    
        
                <div class="mb-3">
                    <label for="image" class="form-label"><b>Image</b></label>
                    <input type="file" class="form-control" name="listing[image]" required>
                </div>        
        
                <div class="row">
                    <div class="mb-3 col-md-5">
                        <label for="location" class="form-label"><b>Location</b></label>
                        <input type="text" class="form-control" name="listing[location]" placeholder="New Delhi" required>
                        <div class="invalid-feedback">Location is invalid</div>
                    </div>
            
                    <div class="mb-3 col-md-5">
                        <label for="country" class="form-label"><b>Country</b></label>
                        <input type="text" class="form-control" name="listing[country]" placeholder="India" required>
                        <div class="invalid-feedback">Country is invalid</div>
                    </div>  
                    
                    <div class="mb-3 col-md-2">
                        <label for="categories" class="form-label"><b>Categories</b></label>
                        <div>
                            <button
                                class="btn dropdown-toggle"
                                type="button"
                                data-bs-toggle="dropdown"
                                aria-expanded="false"
                            >
                            Select
                            </button>
                            <ul class="dropdown-menu p-3">
                                <li>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="listing[categories][]" value="mountains" id="mountains">
                                    <label class="form-check-label" for="mountains">Mountains</label>
                                </div>
                                </li>
                                <li>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="listing[categories][]" value="swimming_pool" id="swimming_pool">
                                    <label class="form-check-label" for="swimming_pool">Swimming Pool</label>
                                </div>
                                </li>
                                <li>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="listing[categories][]" value="beach" id="beach">
                                    <label class="form-check-label" for="beach">Beach</label>
                                </div>
                                </li>
                                <li>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="listing[categories][]" value="river_side" id="river_side">
                                    <label class="form-check-label" for="river_side">River-Side</label>
                                </div>
                                </li>
                                <li>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="listing[categories][]" value="iconic_cities" id="iconic_cities">
                                    <label class="form-check-label" for="iconic_cities">Iconic Cities</label>
                                </div>
                                </li>
                                <li>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="listing[categories][]" value="camping" id="camping">
                                    <label class="form-check-label" for="camping">Camping</label>
                                </div>
                                </li>
                                <li>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="listing[categories][]" value="farms" id="farms">
                                    <label class="form-check-label" for="farms">Farms</label>
                                </div>
                                </li>
                            </ul>
                        </div>    
                        <div class="invalid-feedback">Please select at least one category.</div>
                    </div>  
                </div>

                <div class="mb-3">
                    <label for="price" class="form-label"><b>Price</b></label>
                    <input type="number" class="form-control" name="listing[price]" placeholder="1200" required>
                    <div class="invalid-feedback">Enter valid price</div>
                </div>
                <br><br>
                <button class="btn btn-dark add">Add</button>
                <br><br>
            </form>
        </div>
    
    </div>   
</body>
